#include <iostream>
#include <string>
using namespace std;
int main()
{
	char str[30];
	int lenstr;
	cout << "Input String\t :";
	cin >> str;
	lenstr = strlen(str);

	cout << "Reverse String\t : ";
	for (int i = lenstr-1; i >= 0; i--){
		cout << (char)toupper(str[i]);
	}
	cout << endl;
	system("pause");
	return 0;
}
